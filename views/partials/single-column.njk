{% import "../macros/textStack.njk" as textStack with context %}

<div 
class="{{partial.type}}{% for variant in partial.variants %} {{partial.type}}--{{variant}} {%- endfor %}"
{% if partial.minHeight %}
  style="--single-column-min-height: {{partial.minHeight}}"
{% endif %}
>
  {% if partial.backgroundImage %}
    <div class="single-column__bg">
      <nma-picture
      {% if partial.backgroundImage.mobile %}
        mobile="{{partial.backgroundImage.mobile | url}}" 
      {% endif %}
      {% if partial.backgroundImage.tablet %}
        tablet="{{partial.backgroundImage.tablet | url }}" 
      {% endif %}
      src="{{partial.backgroundImage.src | url}}" 
      alt="{{partial.backgroundImage.alt}}"
      ></nma-picture>
    </div>
  {% endif %}

  {{textStack.render(partial)}}
</div>